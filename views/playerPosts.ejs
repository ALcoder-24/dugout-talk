<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= player.name %> Posts</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="stadium-bg">


  <div class="container">
    <h1><%= player.name %></h1>

    <img src="<%= player.image %>" alt="Photo of <%= player.name %>" style="max-height: 300px; border-radius: 8px; display: block; margin: 0 auto 20px;" />

    <h2>Posts about <%= player.name %></h2>

    <% if (posts.length > 0) { %>
      <ul>
        <% posts.forEach(post => { %>
          <li>
            <p><%= post.content %></p>
            <small>Posted by: <strong><%= post.user_id.username %></strong></small>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No posts yet for this player.</p>
    <% } %>

    <hr>

    <h3>Create a New Post</h3>
    <form action="/posts/player/<%= player._id %>" method="POST">
      <textarea name="content" rows="4" placeholder="Share your thoughts about <%= player.name %>..." required></textarea>
      <div class="button-group">
        <button type="submit">Submit Post</button>
        <a href="/dashboard"><button type="button">Home </button></a>
      </div>
    </form>
  </div>
</body>
</html>


