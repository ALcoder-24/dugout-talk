<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/styles.css">

    <meta charset="UTF-8">
    <title>Guest Page</title>
</head>
<body>
    <div class="auth-container">
    <div class="container">
    <h1>Welcome, Guest!</h1>

    <p>Want to write a post? <a href="/auth/register"><button>Register Here</button></a></p>

    <h2>Players You Can Post About:</h2>
    <ul>
        <% players.forEach(player => { %>
            <li>
                <a href="/posts/player/<%= player._id %>">
                    <%= player.name %> - <img src="<%= player.image %>" width="50">
                </a>
            </li>
        <% }) %>
    </ul>
</div>
</div>
</body>
</html>
