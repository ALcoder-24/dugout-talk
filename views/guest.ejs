<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Guest Access</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <h1>Welcome, Guest ðŸ‘‹</h1>

    <p>Want to join the conversation?</p>
    <div class="button-group">
      <a href="/auth/register"><button>Register</button></a>
      <a href="/auth/login"><button>Sign In</button></a>
    </div>

    <hr>

    <h2>Players You Can Read Posts About</h2>

    <div class="player-list">
      <% players.forEach(player => { %>
        <div class="player-card">
          <a href="/posts/player/<%= player._id %>">
            <img src="<%= player.image %>" alt="Photo of <%= player.name %>">
            <h3><%= player.name %></h3>
            <p><%= player.team %> | <%= player.era %></p>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
