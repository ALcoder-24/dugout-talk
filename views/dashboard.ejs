<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <h1 style="text-align: center;">Welcome, <%= user.username %>!</h1>

    <!-- Navigation Buttons -->
    <div style="text-align: center; margin: 20px 0;">
      <a href="/players"><button>View All Players</button></a>
      <a href="/auth/logout"><button>Logout</button></a>
    </div>

    <h2>Your Posts</h2>

    <% if (userPosts.length === 0) { %>
      <p>You haven't written any posts yet.</p>
    <% } else { %>
      <ul style="padding: 0;">
        <% userPosts.forEach(post => { %>
          <li style="
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            list-style: none;
          ">
            <p><strong>Player:</strong> <%= post.player_id ? post.player_id.name : "Unknown" %></p>
            <p><strong>Content:</strong> <%= post.content %></p>

            <div style="margin-top: 10px;">
              <a href="/posts/<%= post._id %>/edit">
                <button>Edit</button>
              </a>
              <form action="/posts/<%= post._id %>/delete" method="POST" style="display: inline;">
                <button type="submit">Delete</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</body>
</html>



