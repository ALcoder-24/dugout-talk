<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dugout Talk - Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
    }
    button {
      margin: 5px;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      margin-bottom: 10px;
    }
    hr {
      width: 60%;
    }
  </style>
</head>
<body>
  <h1>Welcome, <%= user.username %>!</h1>

  <!-- Logout -->
  <div style="margin-bottom: 20px;">
    <a href="/auth/logout"><button>Logout</button></a>
  </div>

  <!-- User Posts -->
  <h2>Your Posts:</h2>
  <ul>
    <% if (userPosts.length === 0) { %>
      <li>You haven't written any posts yet.</li>
    <% } else { %>
      <% userPosts.forEach(post => { %>
        <li>
          <strong>Player:</strong> <%= post.player_id.name %><br />
          <strong>Content:</strong> <%= post.content %><br />

          <!-- Edit Button -->
          <a href="/posts/<%= post._id %>/edit">
            <button>Edit</button>
          </a>

          <!-- Delete Button -->
          <form
            action="/posts/<%= post._id %>/delete"
            method="POST"
            style="display: inline"
          >
            <button type="submit">Delete</button>
          </form>
        </li>
        <hr />
      <% }) %>
    <% } %>
  </ul>

  <!-- Players -->
  <h2>Check out the players</h2>
  <a href="/players"><button>View All Players</button></a>
</body>
</html>


