<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <h1>Welcome, <%= user.username %>!</h1>

    <div class="button-group">
      <a href="/auth/logout"><button>Logout</button></a>
      <a href="/players"><button>View All Players</button></a>
    </div>

    <hr />

    <h2>Your Posts</h2>
    <% if (userPosts.length === 0) { %>
      <p>You haven't written any posts yet.</p>
    <% } else { %>
      <ul>
        <% userPosts.forEach(post => { %>
          <li style="margin-bottom: 20px;">
            <strong>Player:</strong> <%= post.player_id.name %><br />
            <strong>Content:</strong> <%= post.content %><br />

            <div class="button-group">
              <a href="/posts/<%= post._id %>/edit"><button>Edit</button></a>
              <form action="/posts/<%= post._id %>/delete" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</body>
</html>




