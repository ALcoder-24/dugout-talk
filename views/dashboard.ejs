<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="stadium-bg">

    <div class="container">

        <!-- ðŸ”“ Logout button aligned left -->
        <div style="text-align: right; margin-bottom: 20px;">
          <a href="/auth/logout"><button>Logout</button></a>
        </div>
      
        <h1>Welcome, <%= user.username %>!</h1>
      
        <!-- ðŸ’¬ Instructional message -->
        <p style="margin-top: 20px; font-size: 1.1rem;">
          Ready to talk baseball? Choose a player to view posts or create your own!
        </p>
      
        <!-- ðŸŽ¯ Primary CTA -->
        <h2 style="margin-top: 10px;">Start a New Post</h2>
        <a href="/players"><button class="primary-action">Pick a Player</button></a>
      
        <hr style="margin: 30px 0;" />
      
        <h2>Your Posts</h2>
        <% if (userPosts.length === 0) { %>
          <p>You haven't written any posts yet.</p>
        <% } else { %>
          <ul>
            <% userPosts.forEach(post => { %>
              <li style="margin-bottom: 20px;">
                <strong>Player:</strong> <%= post.player_id.name %><br />
                <strong>Content:</strong> <%= post.content %><br />
      
                <div class="button-group">
                  <a href="/posts/<%= post._id %>/edit"><button>Edit</button></a>
                  <form action="/posts/<%= post._id %>/delete" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                  </form>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      
      
</body>
</html>




